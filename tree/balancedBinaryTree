int height(TreeNode *root)
{
    if (root == NULL)
        return 0;
    int left = height(root->left);
    if (left == -1)
        return -1;
    int right = height(root->right);
    if (right == -1)
        return -1;
    if (abs(left - right) > 1)
        return -1;
    return 1 + max(left, right);
}

bool isBalanced(TreeNode* root)
{
    int check = height(root);
    if(check == -1) return 0;
    else return 1;
}
