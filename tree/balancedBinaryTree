#include <bits/stdc++.h>
using namespace std;
class TreeNode
{
public:
    int data;
    TreeNode *left;
    TreeNode *right;

public:
    TreeNode(int data1)
    {
        data = data1;
        left = NULL;
        right = NULL;
    }
};

